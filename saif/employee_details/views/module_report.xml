<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data>   

        <template id="module_report">

            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <t t-foreach="docs" t-as="o">
                        <t t-foreach="refer" t-as="line">

                            <div class="page">

                                <style>

                                    .main-data {
                                        width: 100%;
                                    }

                                    .center-data {
                                        width: 1000px;
                                        margin: 0px auto;
                                    }

                                    .business-name {
                                        text-align: center;
                                        margin-bottom: 30px;
                                    }

                                     .employee p .solid {
                                         font-weight: bold;
                                     }

                                     .employee p .liquid {
                                        padding: 0px 0px 0px 10px;
                                     }

                                    .employee p {
                                        width: 31%;
                                        float: left;
                                        margin: 10px 5px;
                                    }
                                    .no-margin {
                                        width: 90%;
                                        margin-top: 0px;
                                        margin-bottom: 0px;

                                    }

                                    .permenant {

                                        width: 100%;
                                        float: left;
                                    }

                                    .name {

                                        width: 100%;
                                        float: left;
                                        margin-bottom: 10px;
                                    }

                                    .refer {

                                        width: 100%;
                                        float: left;
                                        margin-bottom: 10px;
                                    }

                                    .new {

                                        width: 30%;
                                        float: left;
                                    }

                                    .new .solid {

                                        width: 30%;
                                        float: left;
                                        font-weight: bold;
                                    }

                                    .new .liquid {

                                        width: 60%;
                                        float: left;
                        
                                    }

                                    .gm  {
                                        margin-top: 80px;
                                    }
                                    .mb0 {
                                        margin-bottom: 0px;
                                        font-size: 20px;
                                    }   
                                    .clearfloat {
                                         clear: both;
                                         float: none;
                                    }            

                                </style>

                                <div class="main-data">

                                    <div class="center-data">

                                        <div class="business-name">
                                            <h2>SAIF CONSTRUCTION PRIVATE LIMITED</h2>
                                            <p>349-A, JOHAR TOWN, LAHORE.</p>

                                        </div>

                                        <div class="enterprise">

                                            <div class="employee">

                                                <p>

                                                    <span class="solid">Name of Employee:</span>

                                                    <span class="liquid">
                                                        <t t-esc="o.name"/>
                                                    </span>
                                                </p>

                                                <p>
                                                    <span class="solid">Gender:</span>

                                                    <span class="liquid">
                                                        <t t-esc="o.gender"/>
                                                    </span>
                                                </p>

                                                <p>
                                                    <span class="solid">D.O.B:</span>

                                                    <span class="liquid">
                                                        <t t-esc="o.birthday"/>
                                                    </span>
                                                </p>

                                                <p>
                                                    <span class="solid">D.O.J:</span>

                                                    <span class="liquid">
                                                        <t t-esc="o.birthday"/>
                                                    </span>
                                                </p> 

                                                 <p>
                                                    <span class="solid">Fathers Name:</span>

                                                    <span class="liquid">
                                                        <t t-esc="o.f_name"/>
                                                    </span>
                                                </p>

                                                 <p>
                                                    <span class="solid">Religion:</span>

                                                    <span class="liquid">
                                                        <t t-esc="o.religion"/>
                                                    </span>
                                                </p>

                                                 <p>
                                                    <span class="solid">M/Status</span>

                                                    <span class="liquid">
                                                        <t t-esc="o.marital"/>
                                                    </span>
                                                </p>

                                                 <p>
                                                    <span class="solid">CNIC #</span>

                                                    <span class="liquid">
                                                        <t t-esc="o.cnic"/>
                                                    </span>
                                                </p>

                                                 <p>
                                                    <span class="solid">Contact #:</span>

                                                    <span class="liquid">
                                                        <t t-esc="o.e_contact"/>
                                                    </span>
                                                </p>

                                                 <p>
                                                    <span class="solid">Permanent Address:</span>

                                                    <span class="liquid">
                                                        <t t-esc="o.per_address"/>
                                                    </span>
                                                </p> 

                                                 <p>
                                                    <span class="solid">Temporary Address:</span>

                                                    <span class="liquid">
                                                        <t t-esc="o.tem_address"/>
                                                    </span>
                                                </p> 

                                            </div>

                                            <div class="name">
                                                <span><b>Reference</b></span>
                                            </div>

                                            <div class="refer">
                                                <div class="new">
                                                    <span class="solid">Name: </span>

                                                        <span class="liquid">
                                                            <t t-esc="line.name"/>
                                                        </span>
                                                </div>

                                                <div class="new">

                                                    <span class="solid">CNIC #</span>

                                                        <span class="liquid">
                                                            <t t-esc="line.cnic"/>
                                                        </span>
                                                </div>

                                                 <div class="new">

                                                    <span class="solid">Contact # </span>

                                                    <span class="liquid">
                                                        <t t-esc="line.e_contact"/>
                                                    </span>

                                                </div>
                                                    
                                            </div>

                                            <div class="permenant">

                                                <p class="no-margin"><b>Permanent Address:  </b><span>
                                                    <t t-esc="line.per_address"/>
                                                </span></p>

                                                <br></br>

                                                <p class="no-margin"><b>Temporary Address:  </b><span>
                                                    <t t-esc="line.tem_address"/>
                                                </span></p>

                                                <p class="gm mb0"><b>Signature of the Employee</b></p>

                                                <p>I hereby confirm that i will abide by the rules and ragulations of the company. And i futher agree that company has right to terminate my service without any notice. </p>

                                                <p class="gm mb0"><b>Signature of the employee</b></p>

                                            </div>

                                        </div>

                                    </div>
                                    
                                </div>

                            </div>
                        </t>

                    </t>

                </t>

            </t>

        </template>

    </data>

</openerp>